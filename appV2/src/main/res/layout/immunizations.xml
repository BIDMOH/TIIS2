<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/one_hundred_and_eighty_dp_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="@drawable/border_radius_button"
        android:ellipsize="middle"
        android:text="@string/back"
        android:layout_margin="10dp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/Black"
        android:gravity="center"
        android:background="@drawable/borders_linear_layout"
        android:layout_marginTop="@dimen/twenty_dp_height"
        android:layout_marginLeft="@dimen/twenty_dp_height"
        android:layout_marginRight="@dimen/twenty_dp_height"
        android:text="@string/date"/>
    <LinearLayout
        android:id="@+id/lin_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/twenty_dp_height"
        android:layout_marginLeft="@dimen/twenty_dp_height"
        android:background="@drawable/border_immunizations"
        android:layout_below="@+id/immun_chart">



        <TextView
            android:id="@+id/tv_antigen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/antigen"
            android:layout_gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>



        <TextView
            android:id="@+id/tv_lastname_children"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/number_immun"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center"
            android:textColor="@color/Black"
            android:gravity="center"/>






    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_with_children"
        android:layout_marginRight="@dimen/twenty_dp_height"
        android:layout_marginLeft="@dimen/twenty_dp_height"
        android:layout_below="@+id/lin_static"/>

</LinearLayout>