<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:id="@+id/stock_antigen"
            android:text="Antigen"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:id="@+id/stock_batch_number"
            android:text="Batch #"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:id="@+id/stock_exp_date"
            android:text="Expiry Date"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/physical_count"
            android:text="Physical Count"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/stock_reason_vvm"
            android:text="###"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/stock_reason_expiry"
            android:text="###"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/stock_reason_physical_damage"
            android:text="###"/>


    </LinearLayout>

</LinearLayout>