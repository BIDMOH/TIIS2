<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten_dp_padding"
    android:weightSum="5"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/tv_dose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dose"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_marginLeft="@dimen/five_dp_width"
        android:textColor="@color/txt"
        android:textSize="@dimen/text_size_medium"/>

    <Spinner
        android:id="@+id/sp_vacc_lot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/spinner_style"
        android:textColor="@color/txt"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/tv_vacc_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/vaccination_date"
        android:textColor="@color/txt"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_medium"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <CheckBox
        android:id="@+id/ch_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:checked="true"
        android:button="@drawable/checkbox"
        android:layout_weight="1"/>
    </LinearLayout>


    <Spinner
        android:id="@+id/sp_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/spinner_style"
        android:text="@string/village_domicile"
        android:textColor="@color/Black"
        android:gravity="center_horizontal"/>


</LinearLayout>