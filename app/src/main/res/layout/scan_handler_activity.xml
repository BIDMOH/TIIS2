<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background1" android:weightSum="1">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/background1" android:weightSum="1">
        <LinearLayout
                android:id="@+id/titleBarLayout"
                style="@style/TitleBar">

            <ImageButton
                    style="@style/TitleBarAction"
                    android:contentDescription="@string/description_home"
                    android:onClick="onClickHome"
                    android:src="@drawable/title_home"/>

            <TextView style="@style/TitleBarText" android:text="@string/title_scan"
                      android:textAlignment="center"
                      android:textSize="@dimen/text_size_large"
                      android:gravity="center"
                      android:textColor="@android:color/black"
                      android:id="@+id/sc_handler_activity_title"/>

            <ImageView
                android:id="@+id/home_start_continuous_sync"
                android:layout_width="@dimen/fifty_dp_height"
                android:layout_height="@dimen/forty_dp_height"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_marginEnd="@dimen/ten_dp_height"
                android:layout_marginRight="@dimen/ten_dp_width"
                android:src="@drawable/ic_continuous_sync"
                android:onClick="onClickContinuousSync"/>
            <ImageView
                    android:id="@+id/home_wifi_icon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="#ffff1313"
                    android:src="@drawable/wifi32"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"/>

        </LinearLayout>
        <TableLayout
                android:layout_width="800dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginStart="300dp"
                android:layout_marginLeft="300dp"
                >
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        android:layout_centerHorizontal="true"
                        android:background="#ffff1313"/>
                <Button

                        android:id="@+id/scan_button"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:drawableTop="@drawable/scan_button"
                        android:onClick="onClick"
                        android:text="@string/title_scan"
                        android:textColor="@color/txt"
                        android:textSize="@dimen/text_size_xlarge"
                        android:background="@drawable/border_radius_text_box"
                        android:layout_margin="10dp"/>
                <TextView
                        android:id="@+id/scan_format"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/scan_button" />
                <TextView
                        android:id="@+id/scan_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/scan_format" />

            </TableRow>

        </TableLayout>
        <TableLayout
                android:layout_width="800dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginStart="320dp"
                android:layout_marginLeft="320dp"
                >
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <TextView
                        style="@style/LabelChild"
                        android:text="@string/or"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textColor="@color/txt"
                        android:layout_gravity="center"
                        />
            </TableRow>
        </TableLayout>
        <TableLayout
                android:layout_width="800dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginStart="220dp"
                android:layout_marginLeft="220dp"
                >
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <TextView
                        style="@style/LabelChild"

                        android:text="@string/type_barcode_number"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textColor="@color/txt"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        />


            </TableRow>

        </TableLayout>
        <TableLayout
                android:layout_width="800dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginStart="220dp"
                android:layout_marginLeft="220dp"
                >
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <EditText
                        android:id="@+id/barcode_input_manually"
                        android:lines="1"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/txt"
                        android:background="@drawable/border_radius_text_box"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/barcode"/>


            </TableRow>

        </TableLayout>
        <TableLayout
                android:layout_width="800dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginStart="315dp"
                android:layout_marginLeft="315dp"
                >
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <Button
                        android:layout_width="200dp"
                        android:onClick="onClick"
                        android:layout_height="60dp"
                        android:text="@string/input"
                        android:id="@+id/manual_barcode_input_button"
                        android:background="@drawable/border_radius_button"
                        android:ellipsize="middle"
                        android:layout_below="@+id/barcode_input_manually"
                        android:textSize="@dimen/text_size_large"/>


            </TableRow>

        </TableLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/overlay"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone">

        <ImageView android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:background="#AA000000"/>

        <ImageView
            android:id="@+id/iv_check_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/on_check_in"/>
    </RelativeLayout>

</RelativeLayout>
    </ScrollView>