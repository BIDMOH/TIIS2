<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical"
    android:weightSum="1">



    <LinearLayout
        android:id="@+id/titleBarLayout"
        style="@style/TitleBar">

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/description_home"
            android:onClick="onClickHome"
            android:src="@drawable/title_home" />

        <TextView
            style="@style/TitleBarText"
            android:gravity="center"
            android:text="@string/title_register_child"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/home_start_continuous_sync"
            android:layout_width="@dimen/fifty_dp_height"
            android:layout_height="@dimen/forty_dp_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/ten_dp_height"
            android:layout_marginRight="@dimen/ten_dp_width"
            android:src="@drawable/ic_continuous_sync"
            android:onClick="onClickContinuousSync"/>
        <ImageView
            android:id="@+id/home_wifi_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffff1313"
            android:src="@drawable/wifi32" />

    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/barcode_id" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/barcode_field"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:numeric="integer"
                    android:phoneNumber="false"
                    android:textColor="@color/txt" />

            </LinearLayout>


        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/firstname" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/txt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/surname" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/txt" />

            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/firstname2" />

                <EditText
                    android:id="@+id/firstname2"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/txt" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/mother_firstname" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/mother_firstname"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/txt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/mother_surname" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/mother_lastname"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/txt" />

            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/date_of_birth" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/birthdate_field"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:drawableEnd="@drawable/calendar_ico"
                    android:drawableRight="@drawable/calendar_ico"
                    android:textColor="@color/txt"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/gender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/male_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/border_check_radio" />

                    <TextView
                        style="@style/LabelChild"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/radio_male" />

                    <RadioButton
                        android:id="@+id/female_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/border_check_radio" />

                    <TextView
                        style="@style/LabelChild"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/radio_female" />


                </RadioGroup>


            </LinearLayout>

        </TableRow>


        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/place_of_birth" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/place_of_birth"
                    style="@style/spinner_style"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/txt" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/village_domicile" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/village_domicile"
                    style="@style/spinner_style"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/txt" />


            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/txt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelChild"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="@string/notes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/notes"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius_text_box"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:inputType="textCapWords|textNoSuggestions"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/txt" />

            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="30dp"
            android:layout_height="30dp" />


    </TableLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp">



        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/register_child_btn_scan"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/border_radius_save_button"
                    android:ellipsize="middle"
                    android:onClick="onClickFeature"
                    android:text="@string/btn_scan"
                    android:textSize="@dimen/text_size_large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_radius_button"
                    android:ellipsize="middle"
                    android:onClick="onClickFeature"
                    android:text="@string/btn_save"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

        </TableRow>
    </TableLayout>
    </LinearLayout>

    <!--Table Header-->
    <TableLayout
        android:id="@+id/view_appointment_table_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingTop="20dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:visibility="gone">
        <!--Table Header-->
        <TableRow
            android:id="@+id/view_appointment_table_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#73819fd1"
            android:padding="15dp">

            <TextView
                android:gravity="center_horizontal"
                android:text="@string/vaccine_dose"
                android:textColor="@color/txt"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:gravity="center_horizontal"
                android:text="@string/schedule"
                android:textColor="@color/txt"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:gravity="center_horizontal"
                android:text="@string/scheduled_date"
                android:textColor="@color/txt"
                android:textSize="@dimen/text_size_medium" />
        </TableRow>
    </TableLayout>
    <!--Table-->
    <TableLayout
        android:id="@+id/view_appointment_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

    </TableLayout>

    <Button
        android:id="@+id/view_child_weight_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_margin="30dp"
        android:background="@drawable/weight_button"
        android:ellipsize="middle"
        android:text="@string/weight"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />
</LinearLayout>



    </HorizontalScrollView>
</ScrollView>

    <RelativeLayout
        android:id="@+id/rl_load_item_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80ffeeca"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progres_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    </FrameLayout>
