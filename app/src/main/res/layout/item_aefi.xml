<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_aefi_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="15dp"
    android:weightSum="7"
    android:background="@color/background1">

    <TextView
        android:id="@+id/vaccines_aefi_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="left"
        android:textColor="@color/txt"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/health_center_name_aefi_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="@color/txt"
        android:textSize="20sp"
        />


    <TextView
        android:id="@+id/vaccination_date_aefi_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="@color/txt"
        android:textSize="20sp"
       />

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/chk_done_aefi_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.5"
            android:button="@drawable/checkbox"
            android:editable="false"
            android:checked="false"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/txt"
            android:enabled="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/chk_aefidone_aefi_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.5"
            android:button="@drawable/checkbox"
            android:checked="false"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/txt"
            android:enabled="false"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_aefi_date_aefi_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="@color/txt"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txt_notes_aefi_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/txt"
        android:textSize="20sp"
        />

</LinearLayout>
