<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5">
        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/edit_text_used_to_request_focus2"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_marginBottom="-2dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@color/card_light_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Health facility Immunization Coverage Report"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/national_logo"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/launcher_icon"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/reports_title"
                        android:layout_centerInParent="true"
                        android:gravity="center|center_vertical"
                        android:text="@string/reports_title"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/region_title"
                                android:text="Region"
                                android:gravity="right"
                                android:paddingTop="4dp"
                                android:textStyle="italic|bold"
                                android:paddingBottom="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/region_value"
                                android:text="Arusha"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:textStyle="italic|bold"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:id="@+id/district_title"
                                android:text="District"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/district_value"
                                android:text="Arusha City"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:textStyle="italic|bold"
                                android:text="Health Facility"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/hf_value"
                                android:text="Baraa RC Dispensary"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:id="@+id/the_title"
                                android:textStyle="italic|bold"
                                android:text="Title"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/the_title_value"
                                android:text="Health facility Immunization Coverage Report"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:gravity="right"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:textStyle="italic|bold"
                                android:text="Reporting Period"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentRight="true">
                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:focusable="true"
                                    android:textSize="12sp"
                                    android:hint="Date from"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/met_dob_from"
                                    app:met_iconRight="@drawable/ic_monthly_plan"
                                    app:met_floatingLabelText="From Date"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="@color/light_blue_500"
                                    android:layout_centerVertical="true"/>

                                <View
                                    android:visibility="gone"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/card_light_text"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"/>

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:focusable="true"
                                    android:layout_gravity="center_vertical"
                                    android:hint="Date to"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="32dp"
                                    android:id="@+id/met_dob_value"
                                    app:met_iconRight="@drawable/ic_monthly_plan"
                                    app:met_floatingLabelText="To Date"
                                    app:met_floatingLabel="normal"
                                    app:met_floatingLabelTextColor="@color/light_blue_500"
                                    android:layout_marginRight="16dp"
                                    android:layout_centerVertical="true"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/card_light_text"
                                    android:layout_marginTop="32dp"
                                    android:layout_marginBottom="32dp"/>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/chart_view"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="600dp">

                    <ProgressBar
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:visibility="gone"
                        android:id="@+id/progres_bar"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"/>
                    <com.github.mikephil.charting.charts.RadarChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>
