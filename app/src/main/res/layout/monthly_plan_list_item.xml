<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="60dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="wrap_content"
                android:id="@+id/mp_txt_child_names"
                android:layout_marginLeft="8dp"
                android:text="Child Names Here"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/mp_txt_vaccines"
                android:text="Vaccine Goes Here"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/mp_txt_due_date"
                android:text="Wed, 16th Dec 2015"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/mp_txt_age"
                android:text="10 Months"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>