<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:background="@color/background1" android:weightSum="1">

    <LinearLayout
            android:id="@+id/titleBarLayout"
            style="@style/TitleBar">

        <ImageButton
                style="@style/TitleBarAction"
                android:contentDescription="@string/description_home"
                android:onClick="onClickHome"
                android:src="@drawable/title_home"/>

        <TextView style="@style/TitleBarText" android:text="@string/title_vaccination_queue"
                  android:textAlignment="center"
                  android:textSize="@dimen/text_size_large"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                />

        <ImageView
            android:id="@+id/home_start_continuous_sync"
            android:layout_width="@dimen/fifty_dp_height"
            android:layout_height="@dimen/forty_dp_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/ten_dp_height"
            android:layout_marginRight="@dimen/ten_dp_width"
            android:src="@drawable/ic_continuous_sync"
            android:onClick="onClickContinuousSync"/>
        <ImageView
                android:id="@+id/home_wifi_icon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#ffff1313"
                android:src="@drawable/wifi32"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>

    </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/background1" android:weightSum="1">





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/tv_today_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    style="@style/LabelChild"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/txt"
                    android:layout_centerVertical="true"
                    android:text="Date"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/txt"
                        android:layout_centerVertical="true"
                        android:text="@string/schedule"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_toLeftOf="@+id/sp_age_definitions"/>

                    <Spinner
                        android:id="@+id/sp_age_definitions"
                        style="@style/spinner_style"
                        android:layout_gravity="center_vertical"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="30dp"
                        android:drawSelectorOnTop="true"
                        android:spinnerMode="dialog"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/txt">

                    </Spinner>

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_vacc_names_quantities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="#ffffff"
                    android:text="@string/vaccine_names_quantity"
                    android:background="@drawable/border_radius_button"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>

                <!--Table Header-->
                <TableLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:paddingTop="20dp"
                    android:id="@+id/view_appointment_table_layout_header">
                    <!--Table Header-->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#73819fd1"
                        android:padding="15dp"
                        android:id="@+id/view_appointment_table_header">
                        <TextView
                            android:text="@string/child"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/txt"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="@string/vaccines"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/txt"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="@string/schedule"
                            android:gravity="center_horizontal"
                            android:textColor="@color/txt"
                            android:textSize="@dimen/text_size_medium"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="@string/scheduled_date"
                            android:gravity="center_horizontal"
                            android:textColor="@color/txt"
                            android:textSize="@dimen/text_size_medium"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TableLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:id="@+id/view_vacc_table_layout">
