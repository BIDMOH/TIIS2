<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/vaccines_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="32dp"
                android:layout_height="wrap_content"
                android:text="Vaccines"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/vaccine_lot_title"
                android:textColor="@color/black"
                android:text="Vaccine Lot"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/vaccination_date_title"
                android:textColor="@color/black"
                android:text="Vaccination Date"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/done_title"
                android:textColor="@color/black"
                android:text="Done"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/reasons_title"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Reason If Not Done"
                android:layout_marginRight="32dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:id="@+id/administer_vaccines_offline_table_layout">
            </TableLayout>

        </ScrollView>

        <ListView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/all_doses_list"
            android:background="@color/white">
        </ListView>

    </LinearLayout>

</LinearLayout>