<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/titleBarLayout"
        style="@style/TitleBar">

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/description_home"
            android:onClick="onClickHome"
            android:src="@drawable/title_home" />

        <TextView
            style="@style/TitleBarText"
            android:gravity="center"
            android:text="@string/title_monthly_plan"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/home_start_continuous_sync"
            android:layout_width="@dimen/fifty_dp_height"
            android:layout_height="@dimen/forty_dp_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/ten_dp_height"
            android:layout_marginRight="@dimen/ten_dp_width"
            android:src="@drawable/ic_continuous_sync"
            android:onClick="onClickContinuousSync"/>

        <ImageView
            android:id="@+id/home_wifi_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffff1313"
            android:src="@drawable/wifi32" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background1"

        android:orientation="vertical"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tv_today_date"
                style="@style/LabelChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="@string/date"
                android:textColor="@color/txt"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/sp_age_definitions"
                android:text="@string/schedule"
                android:textColor="@color/txt"
                android:textSize="@dimen/text_size_medium" />

            <Spinner
                android:id="@+id/sp_age_definitions"
                style="@style/spinner_style"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dialog"
                android:textColor="@color/txt">

            </Spinner>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_vacc_names_quantities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_radius_button"
            android:layout_gravity="left"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/vaccine_names_quantity"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_large" />

        <!--Table Header-->
        <TableLayout
            android:id="@+id/view_appointment_table_layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="20dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">
            <!--Table Header-->
            <TableRow
                android:id="@+id/view_appointment_table_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#73819fd1"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/child"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/vaccines"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/schedule"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/scheduled_date"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/text_size_medium" />
            </TableRow>
        </TableLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/view_vacc_table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">
                <!--Dynamic Table Rows-->
                <!--<TableRow-->
                <!--android:id="@+id/view_appointment_empty_row"-->
                <!--android:layout_height="60dp"-->
                <!--android:padding="10dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:visibility="visible"-->
                <!--android:background="#33819fd1"-->
                <!--android:onClick="administerVaccineViewer">-->
                <!--<TextView-->
                <!--android:gravity="center_horizontal"-->
                <!--android:textColor="@color/txt"-->
                <!--android:id="@+id/test_vaccine_dose"-->
                <!--/>-->
                <!--<TextView-->
                <!--android:gravity="center_horizontal"-->
                <!--android:textColor="@color/txt"-->
                <!--android:id="@+id/test_schedule"/>-->
                <!--<TextView-->
                <!--android:gravity="center_horizontal"-->
                <!--android:textColor="@color/txt"-->
                <!--android:id="@+id/test_scheduled_date"/>-->
                <!--</TableRow>-->
            </TableLayout>
        </ScrollView>


    </LinearLayout>
</LinearLayout>