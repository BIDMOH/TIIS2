<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/cardview_light_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="32dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:text="Item"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt_name_title"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:text="Lot Number"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt_lot_number_title"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:text="Expiry Date"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt_exp_date_title"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:text="Balance"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txt_balance_title"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.20"
                    android:layout_height="wrap_content"
                    android:id="@+id/dozi_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:text="Vaccine"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hf_balance_table">

            </TableLayout>

            <Button
                android:layout_gravity="right"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/savebtn"
                android:background="@color/light_blue_600"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="24sp"/>

        </LinearLayout>

    </ScrollView>

    <ListView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/health_facility_balance_list"
        android:scrollbars="none"/>

</LinearLayout>