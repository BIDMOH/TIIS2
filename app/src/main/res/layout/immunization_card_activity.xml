            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firstname_str_immuniz_card_activity"
                        style="@style/LabelChild"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="@string/name" />

                    <TextView
                        android:id="@+id/child_name_supplements_activity"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_alignBaseline="@id/firstname_str_immuniz_card_activity"
                        android:layout_toRightOf="@id/firstname_str_immuniz_card_activity"
                        android:editable="false"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/txt"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/motherFirstname_str_immuniz_card_activity"
                        style="@style/LabelChild"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="@string/mother" />

                    <TextView
                        android:id="@+id/txt_mother_name_immuniz_card_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/motherFirstname_str_immuniz_card_activity"
                        android:layout_toRightOf="@id/motherFirstname_str_immuniz_card_activity"
                        android:editable="false"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/txt"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
