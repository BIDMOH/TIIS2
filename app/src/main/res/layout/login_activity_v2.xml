<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foreground1"
    android:gravity="top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/log_in_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/log_in_txt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/txt"
        android:textSize="@dimen/text_size_xlarge" />


    <LinearLayout
        android:id="@+id/big_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/language"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/table_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <TextView
                style="@style/LabelChild"
                android:id="@+id/language_textview"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="@string/language" />

            <Spinner
                android:id="@+id/lang_spinner"
                style="@style/spinner_style"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dialog"
                android:textColor="@color/txt">

            </Spinner>
            <!--<EditText-->
            <!--android:id="@+id/language"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:hint="@string/password"-->
            <!--android:inputType="textPassword"-->
            <!--android:lines="1"-->
            <!--android:background="@drawable/border_radius_text_box"-->

            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="@color/txt"/>-->


        </LinearLayout>

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/big_lin"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LabelChild"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="@string/username" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/password"
                        android:layout_alignLeft="@+id/password"
                        android:layout_alignRight="@+id/password"
                        android:layout_alignStart="@+id/password"
                        android:layout_below="@+id/textView2"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_radius_text_box"
                        android:hint="@string/username"
                        android:inputType="textNoSuggestions"
                        android:lines="1"
                        android:textColor="@color/txt" />

                </LinearLayout>
            </TableRow>

            <Space
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LabelChild"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/username"
                        android:layout_gravity="center"
                        android:text="@string/password" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/password"
                        android:layout_alignLeft="@+id/password"
                        android:layout_alignRight="@+id/password"
                        android:layout_alignStart="@+id/password"
                        android:layout_below="@+id/textView2"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_radius_text_box"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:textColor="@color/txt" />

                </LinearLayout>
            </TableRow>

            <Space
                android:layout_width="30dp"
                android:layout_height="30dp" />


        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/big_lin"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/border_radius_button"
        android:text="@string/enter" />

</RelativeLayout>