<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background1"
              android:weightSum="1">
    <!--Header-->
    <LinearLayout
            android:id="@+id/titleBarLayout"
            style="@style/TitleBar">

        <ImageButton
                style="@style/TitleBarAction"
                android:contentDescription="@string/description_home"
                android:onClick="onClickHome"
                android:src="@drawable/title_home"/>

        <TextView style="@style/TitleBarText" android:text="@string/title_scan_result"
                  android:textAlignment="center"
                  android:textSize="@dimen/text_size_large"
                  android:gravity="center"
                  android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/home_start_continuous_sync"
            android:layout_width="@dimen/fifty_dp_height"
            android:layout_height="@dimen/forty_dp_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/ten_dp_height"
            android:layout_marginRight="@dimen/ten_dp_width"
            android:src="@drawable/ic_continuous_sync"
            android:onClick="onClickContinuousSync"/>
        <ImageView
                android:id="@+id/home_wifi_icon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#ffff1313"
                android:src="@drawable/wifi32"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <!--Lines-->
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
        <!--Row 1-->
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="80dp">
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        style="@style/LabelChild"
                        android:text="@string/barcode_id"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:id="@+id/scan_result_barcode_str"/>
                <TextView
                        android:id="@+id/scan_result_barcode"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:textIsSelectable="false"
                        android:textColor="@color/txt"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:editable="false"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_large"
                        android:layout_alignBaseline="@id/scan_result_barcode_str"
                        android:layout_toRightOf="@id/scan_result_barcode_str"/>
            </RelativeLayout>
        </TableRow>

        <!--Row 2-->
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="80dp">
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        style="@style/LabelChild"
                        android:text="@string/name"
                        android:id="@+id/scan_result_firstname_str"
                        android:layout_width="150dp"
                        android:layout_height="60dp"/>
                <TextView
                        android:id="@+id/scan_result_child_name"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textIsSelectable="false"
                        android:textColor="@color/txt"
                        android:textStyle="bold"
                        android:lines="1"
                        android:maxLines="1"
                        android:editable="false"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_alignBaseline="@id/scan_result_firstname_str"
                        android:layout_toRightOf="@id/scan_result_firstname_str"/>
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        style="@style/LabelChild"
                        android:text="@string/mother"
                        android:id="@+id/scan_result_motherFirstname_str"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>
                <TextView
                        android:id="@+id/scan_result_mother_name"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="false"
                        android:textColor="@color/txt"
                        android:textStyle="bold"
                        android:lines="1"
                        android:editable="false"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_alignBaseline="@id/scan_result_motherFirstname_str"
                        android:layout_toRightOf="@id/scan_result_motherFirstname_str"/>
            </RelativeLayout>
        </TableRow>

        <!--Row 3-->
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="80dp">
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        style="@style/LabelChild"
                        android:text="@string/date_of_birth"
                        android:id="@+id/scan_result_dob_str"
                        android:layout_width="150dp"
                        android:layout_height="60dp"/>
                <TextView
                        android:id="@+id/scan_result_dob"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:textIsSelectable="false"
                        android:textColor="@color/txt"
                        android:textStyle="bold"
                        android:lines="1"
                        android:editable="false"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_alignBaseline="@id/scan_result_dob_str"
                        android:layout_toRightOf="@id/scan_result_dob_str"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        style="@style/LabelChild"
                        android:id="@+id/scan_result_gender_str"
                        android:text="@string/gender"
                        android:layout_width="100dp"
                        android:layout_height="60dp"/>

                <TextView
                        android:id="@+id/scan_result_gender"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:textIsSelectable="false"
                        android:textColor="@color/txt"
                        android:textStyle="bold"
                        android:lines="1"
                        android:editable="false"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_alignBaseline="@id/scan_result_gender_str"
                        android:layout_toRightOf="@id/scan_result_gender_str"
                        />
                <!--android:layout_marginTop="10dp" android:layout_marginBottom="10dp"-->
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
    <!--Buttons-->
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="60dp"
            >
        <!--android:layout_marginLeft="30dp"-->
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal">
                <!--android:layout_marginLeft="10dp"-->
                <Button
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/weight"
                        android:id="@+id/scan_result_weight_button"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/weight_button"
                        android:ellipsize="middle"
                        android:textSize="@dimen/text_size_large"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal">
                <!--android:layout_marginLeft="30dp"-->
                <Button
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:text="@string/modify_record"
                        android:id="@+id/scan_result_modify_button"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/border_radius_button"
                        android:ellipsize="middle"
                        android:textSize="@dimen/text_size_large"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal">
                <!--android:layout_marginLeft="30dp"-->
                <Button
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/vaccinate"
                        android:id="@+id/scan_result_vaccinate_button"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/vaccinate_button"
                        android:ellipsize="middle"
                        android:textSize="@dimen/text_size_large"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>
