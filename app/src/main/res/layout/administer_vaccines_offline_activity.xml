<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background1">

    <!--Layout Top-->
    <LinearLayout
        android:id="@+id/titleBarLayout"
        style="@style/TitleBar">

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/description_home"
            android:onClick="onClickHome"
            android:src="@drawable/title_home"/>

        <TextView style="@style/TitleBarText" android:text="@string/title_administer_vaccines"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/home_start_continuous_sync"
            android:layout_width="@dimen/fifty_dp_height"
            android:layout_height="@dimen/forty_dp_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/ten_dp_height"
            android:layout_marginRight="@dimen/ten_dp_width"
            android:src="@drawable/ic_continuous_sync"
            android:onClick="onClickContinuousSync"/>
        <ImageView
            android:id="@+id/home_wifi_icon"
            android:layout_width="@dimen/fifty_dp_height"
            android:layout_height="@dimen/forty_dp_height"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/ten_dp_height"
            android:layout_marginRight="@dimen/ten_dp_width"
            android:background="#ffff1313"
            android:src="@drawable/wifi32"/>

    </LinearLayout>

    <!--Barcode-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp_height"
        android:layout_marginLeft="@dimen/twenty_dp_width"
        android:layout_marginTop="@dimen/ten_dp_height">

        <TextView
            android:id="@+id/vaccinate_barcode_str"
            style="@style/LabelChild"
            android:layout_width="@dimen/one_hundred_and_fifty_dp_width"
            android:layout_height="match_parent"
            android:text="@string/barcode_id" />

        <TextView
            android:id="@+id/administer_vaccine_offline_barcode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp_height"
            android:layout_alignBaseline="@id/vaccinate_barcode_str"
            android:layout_toRightOf="@id/vaccinate_barcode_str"
            android:editable="false"
            android:singleLine="true"
            android:textColor="@color/txt"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />
    </RelativeLayout>


    <!--Table Header-->
    <LinearLayout
        android:id="@+id/view_appointment_table_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#73819fd1"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen_dp_width"
        android:weightSum="5">
        <!--Table Header-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/vaccines"
            android:textColor="@color/txt"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/vaccine_lot"
            android:textColor="@color/txt"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/vaccination_date"
            android:textColor="@color/txt"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/done"
            android:textColor="@color/txt"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/reason"
            android:textColor="@color/txt"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>


    <!--Table-->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/administer_vaccines_table_scrollView">

        <TableLayout android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:id="@+id/administer_vaccines_offline_table_layout">

            <!--android:shrinkColumns="*"-->
            <!--android:stretchColumns="*"-->
        </TableLayout>
    </ScrollView>


    <!--Buttons-->

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sixty_dp_height"
                    android:layout_marginTop="@dimen/twenty_five_dp_height"
                    android:layout_gravity="center_horizontal">
                <!--android:layout_marginLeft="10dp"-->
                <Button
                        android:id="@+id/vaccinate_offline_back_button"
                        android:layout_width="@dimen/one_hundred_and_fifty_dp_width"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/back"
                        android:background="@drawable/border_radius_button"
                        android:textSize="@dimen/text_size_large"
                        android:ellipsize="middle"
                        />
                <Button
                        android:id="@+id/vaccinate_offline_save_button"
                        android:layout_width="@dimen/one_hundred_and_fifty_dp_width"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/btn_save"
                        android:background="@drawable/weight_button"
                        android:textSize="@dimen/text_size_large"
                        android:ellipsize="middle"
                        android:layout_marginLeft="@dimen/twenty_dp_width"
                        />

                <!--<Button-->
                <!--android:id="@+id/vaccinate_remove_button"-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:text="Remove"-->
                <!--android:background="@drawable/vaccinate_button"-->
                <!--android:textSize="@dimen/text_size_large"-->
                <!--android:ellipsize="middle"-->
                <!--android:layout_margin="20dp"-->
                <!--/>-->


            </LinearLayout>


</LinearLayout>